@using HabitsApp.Shared.Entities;

@if (Categories == null)
{
    <h3>Loading categories...</h3>
    <DisplayLoadingSpinner />
}
else
{
    <RadzenRow>
        <RadzenButton ButtonStyle="ButtonStyle.Success" Icon="add_circle_outline" class="mt-2 mb-4" Text="Add New Category"
                  Click=ToggleNewCategoryCard Disabled=AddCategoryDisabled />
    </RadzenRow>

    <div class="d-flex justify-content-center" style="margin-bottom: 2vw">
        <CreateCategoryCard AddCategoryCardVisible=CreateCategoryVisible CloseAddCategoryCard=ToggleNewCategoryCard />
    </div>

    <RadzenStack Orientation=@orientation Wrap=@flexWrap>
        @foreach (var category in Categories)
        {
            <RadzenCard Style="width: 20vw;" class="cat-card">
                <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-2 rz-my-0">
                    Category
                </RadzenText>
                <RadzenText TextStyle="TextStyle.Body1">
                    <b>
                        @category.Name
                    </b>
                </RadzenText>
            </RadzenCard>
        }
        </RadzenStack>
}

